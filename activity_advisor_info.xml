<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Title for the Advisor Info Page -->
    <TextView
        android:id="@+id/advisorInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Advisor Requests"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:paddingBottom="8dp"
        android:textColor="@color/black" />


    <!-- ListView for displaying pending outpass requests -->
    <ListView
        android:id="@+id/requestListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/advisorInfoTitle"
        android:divider="@color/gray"
        android:dividerHeight="1dp"
        android:background="@color/white" />

</RelativeLayout>
