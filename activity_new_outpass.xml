<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Outpass Request"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"
            android:textColor="@color/primaryTextColor"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/rollNumberTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext"
            android:textColor="@color/primaryTextColor"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/reasonEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Reason for Outpass"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:textColor="@color/primaryTextColor"
            android:layout_marginBottom="12dp"
            android:textColorHint="@color/gray"/>

        <EditText
            android:id="@+id/dateFromEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date From (DD/MM/YYYY)"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:textColor="@color/primaryTextColor"
            android:layout_marginBottom="12dp"
            android:textColorHint="@color/gray"/>

        <EditText
            android:id="@+id/dateToEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date To (DD/MM/YYYY)"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:textColor="@color/primaryTextColor"
            android:layout_marginBottom="12dp"
            android:textColorHint="@color/gray"/>

        <EditText
            android:id="@+id/outTimeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Out Time (HH:MM)"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:textColor="@color/primaryTextColor"
            android:layout_marginBottom="12dp"
            android:textColorHint="@color/gray"/>

        <EditText
            android:id="@+id/inTimeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="In Time (HH:MM)"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:textColor="@color/primaryTextColor"
            android:layout_marginBottom="12dp"
            android:textColorHint="@color/gray"/>

        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Request"
            android:background="@drawable/rounded_button"
            android:textColor="@color/white"
            android:padding="12dp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
